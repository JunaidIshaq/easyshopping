<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.easyshopping">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".activities.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/neweasyshoplogoasset1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/neweasyshoplogoasset1"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar">
        <activity
            android:name=".activities.SplashScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity">
        </activity>
        <activity
            android:name=".activities.SearchActivity">
        </activity>
        <activity
            android:name=".activities.WebViewActivity">
        </activity>
        <activity
            android:name=".activities.FeedBackActivity">
        </activity>

        <activity
            android:name=".activities.FaqsActivity">
        </activity>

        <activity
            android:name=".activities.OfflineActivity">
        </activity>

        <activity
            android:name=".activities.ShowHistoryActivity">
        </activity>
    </application>

</manifest>