<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SearchActivity"
    android:background="@drawable/backg"
    android:orientation="vertical">

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10px">

        <ImageView
            android:id="@+id/cityImage"
            android:background="@drawable/city_icon"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:padding="10px"></ImageView>

        <Spinner
            android:id="@+id/cities"
            android:layout_width="368dp"
            android:layout_height="59dp"
            android:layout_alignEnd="@+id/progressBar1"
            android:popupBackground="#3B4EBD"
            android:prompt="@string/select_city"
            android:textColor="#0F0E10" />
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10px">

    <ImageView
            android:id="@+id/categoryImage"
            android:background="@drawable/category_icon"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:padding="10px"></ImageView>

        <Spinner
            android:id="@+id/categories"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_alignEnd="@+id/progressBar1"
            android:prompt="@string/select_category"
            android:textColor="#0A0A0B"
            android:popupBackground="#3B4EBD"/>
    </TableRow>

    <TableRow
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="10px">

    <ImageView
            android:id="@+id/subCategoryImage"
            android:background="@drawable/subcategory_icon"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:padding="10px"></ImageView>

        <Spinner
            android:id="@+id/subcategories"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_alignEnd="@+id/progressBar1"
            android:prompt="@string/select_subcategory"
            android:textColor="#3B4EBD"
            android:popupBackground="#4057DA"/>
    </TableRow>

    <Button
        android:id="@+id/beginButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:text="@string/search"
        android:background="#F6A630"
        android:textColor="@color/colorWhite" />

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:padding="10sp"
        android:scrollbars="vertical" />


</LinearLayout>